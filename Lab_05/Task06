#include <iostream>
#include <string>
using namespace std;

class Employee{ 
private:
    string name;
    string designation;
    static int totalEmployees;

public:
    Employee(string n,string d) {
        name=n;
        designation=d;
        totalEmployees++;
    }

    void showEmployee() {
        cout<<"Name: "<<name<<", Designation: "<<designation<<endl;
    }

    static void showTotalEmployees() {
        cout<<"Total Employees in Company: "<<totalEmployees<<endl;
    }
};


int Employee::totalEmployees=0;

class ClientProject{ 
private:
    string projectName;
    Employee* team[10];
    int teamCount;

public:
    ClientProject(string pn) {
        projectName=pn;
        teamCount=0;
    }

    void addEmployee(Employee* e) {
        if(teamCount<10)
            team[teamCount++]=e;
    }

    void showTeam() {
        cout<<endl<<"Project: "<<projectName<<endl<<"Team Members:"<<endl; 
        for(int i=0;i<teamCount;i++)
            team[i]->showEmployee();
    }
};

int main() {
    Employee e1("Hafsa","Developer"); 
    Employee e2("Sanaan","Tester"); 
    Employee e3("Bilal","Project Manager"); 
    Employee e4("YUsra","Designer"); 

    ClientProject project1("E-Commerce App");

    project1.addEmployee(&e1);
    project1.addEmployee(&e2);
    project1.addEmployee(&e3);

    project1.showTeam();

    cout<<endl;
    Employee::showTotalEmployees();

    return 0;
}
