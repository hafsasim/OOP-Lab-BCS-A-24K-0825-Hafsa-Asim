#include <iostream>
#include <cstring>
using namespace std;

int main(){
    int len1,len2;

    cout<<"Enter length of first string: ";
    cin>>len1;
    cin.ignore();

    char* str1=new char[len1+1];
    cout<<"Enter first string: ";
    cin.getline(str1,len1+1);

    cout<<"Enter length of second string: ";
    cin>>len2;
    cin.ignore();

    char* str2=new char[len2+1];
    cout<<"Enter second string: ";
    cin.getline(str2,len2+1);

    char* concat=new char[len1+len2+1];
    strcpy(concat,str1);
    strcat(concat,str2);

    cout<<"\nFirst string: "<<str1<<endl;
    cout<<"Second string: "<<str2<<endl;
    cout<<"Concatenated string: "<<concat<<endl;

    delete[] str1;
    delete[] str2;
    delete[] concat;

    return 0;
}
