#include<iostream>
#include<fstream>
#include<sstream>
#include<string>
using namespace std;

class WordProcessor{
private:
    string filename;
public:
    WordProcessor(string file):filename(file){}
    void displayWords()const{
        ifstream fin(filename);
        if(!fin){
            cout<<"File not found!"<<endl;
            return;
        }
        string line;
        while(getline(fin,line)){
            istringstream iss(line);
            string word;
            while(iss>>word){
                cout<<word<<endl;
            }
        }
        fin.close();
    }
};

int main(){
    WordProcessor wp("story.txt");
    wp.displayWords();
    return 0;
}
