#include <iostream>
#include <string>
using namespace std;

template <typename T>
T findMax(T arr[], int size){
    T max = arr[0];
    for(int i=1;i<size;i++){
        if(arr[i] > max){
            max = arr[i];
        }
    }
    return max;
}

int main(){
    int intArray[] = {10,20,5,30,25};
    int intSize = 5;
    cout<<"Array: [10, 20, 5, 30, 25]"<<endl;
    cout<<"Maximum: "<<findMax(intArray,intSize)<<endl<<endl;
    
    string strArray[] = {"Apple","Mango","Banana","Peach"};
    int strSize = 4;
    cout<<"Array: [\"Apple\", \"Mango\", \"Banana\", \"Peach\"]"<<endl;
    cout<<"Maximum: "<<findMax(strArray,strSize)<<endl;
    
    return 0;
}
