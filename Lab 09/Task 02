#include <iostream>
using namespace std;

class TransportUnit{
public:
    virtual void startJourney()=0;
    virtual void updateLocation()=0;
    virtual void calculateETA()const=0;
    virtual ~TransportUnit(){}
};


class Truck:public TransportUnit{
private:
    int speed;
    string currentLocation;
public:
    Truck():speed(60),currentLocation("Depot"){}
    void startJourney()override{
        cout<<"The truck has started its journey from "<<currentLocation<<endl;
    }
    void updateLocation()override{
        currentLocation="Highway checkpoint";
        cout<<"Truck is now at "<<currentLocation<<endl;
    }
    void calculateETA()const override{
        cout<<"Estimated arrival time for truck: 5 hours at speed "<<speed<<" km/h"<<endl;
    }
};


class Drone:public TransportUnit{
private:
    int speed;
    string currentLocation;
public:
    Drone():speed(120),currentLocation("Warehouse"){}
    void startJourney()override{
        cout<<"The drone has taken off from "<<currentLocation<<endl;
    }
    void updateLocation()override{
        currentLocation="Mid-air";
        cout<<"Drone is currently "<<currentLocation<<endl;
    }
    void calculateETA()const override{
        cout<<"Estimated arrival time for drone: 2 hours at speed "<<speed<<" km/h"<<endl;
    }
};

int main(){
    TransportUnit* fleet[2];
    fleet[0]=new Truck();
    fleet[1]=new Drone();

    for(int i=0;i<2;i++){
        fleet[i]->startJourney();
        fleet[i]->updateLocation();
        fleet[i]->calculateETA();
        cout<<endl;
    }

    for(int i=0;i<2;i++)
        delete fleet[i];

    return 0;
}
